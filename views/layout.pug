doctype html
html(lang="cn")
  head
    title demo-site
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/sttlesheets/style.css')
  body
    .container
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        a.navbar-brand(href='/') 测试网页
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarA', aria-controls='navbarA', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarA.collapse.navbar-collapse
          ul.navbar-nav.mr-auto.mt-2.mt-lg-0
            li.nav-item
              a.nav-link(href='/') 主页
            if user
              li
                a.nav-link(href='/articles/add') 添加文章
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a.nav-link(href='/users/logout') 登出
            else
              li.nav-item
                a.nav-link(href='/users/register') 注册
              li.nav-item
                a.nav-link(href='/users/login') 登入
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
             
      block content
      br
      hr
      footer
        p Copyright &copy; 2018
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/javascripts/main.js')
    script(src='/javascripts/vue.min.js')
